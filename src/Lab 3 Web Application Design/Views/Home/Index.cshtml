@{
    ViewData["Title"] = "Home Page";
}

<h2>
    
    <p>@ViewData["greeting"]</p>
    <p>The time is @ViewData["timeOfDay"] on @ViewData["date"]</p>
    <p>@ViewData["daysLeft"] more days until @ViewData["year"]</p>

</h2>

<a asp-action="ShowPerson" asp-controller="Home" class="btn btn-info">View Person</a>
