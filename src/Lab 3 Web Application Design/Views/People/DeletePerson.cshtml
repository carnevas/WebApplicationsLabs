@model WebLab4.Models.Person
@{
    ViewData["Title"] = "Delete Person";
}
@if (Model != null)
{
    <h2>@ViewData["DeletePersonHeading"]</h2>
    <hr>
    <body>
        <p>First Name: @Model.FirstName</p>
        <p>Last Name: @Model.LastName</p>
        @if (Model.BirthDate != null)
        {
            <p>Birth Date: @Model.GetBirthday()</p>
            <p>Age: @Model.Age</p>
        }
    </body>
    <form asp-action="DeletePerson" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="PersonID" value="@Model.PersonID" />
            <button class="btn btn-default">Delete</button>
            <a asp-action="Index" asp-controller="People" class="btn btn-default">Cancel</a>
        </div>
    </form> 
}
else
{
    <h1>Person not found.</h1>
}